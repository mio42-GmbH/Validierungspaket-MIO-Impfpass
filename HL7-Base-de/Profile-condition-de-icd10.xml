<StructureDefinition xmlns="http://hl7.org/fhir">
  <id value="condition-de-icd10" />
  <url value="http://fhir.de/StructureDefinition/condition-de-icd10" />
  <version value="0.9.12" />
  <name value="ConditionDeICD10" />
  <title value="Deutsches Profil einer Condition mit Codierung nach ICD-10-GM" />
  <status value="draft" />
  <experimental value="false" />
  <date value="2020-07-05" />
  <publisher value="HL7 Deutschland e.V. (Technisches Komitee FHIR)" />
  <description value="Deutsches Profil einer Condition (Gesundheitszustand, Erkrankung) mit Codierung nach ICD10-GM" />
  <copyright value="HL7 Deutschland e.V." />
  <fhirVersion value="4.0.1" />
  <kind value="resource" />
  <abstract value="false" />
  <type value="Condition" />
  <baseDefinition value="http://hl7.org/fhir/StructureDefinition/Condition" />
  <derivation value="constraint" />
  <differential>
    <element id="Condition.code">
      <path value="Condition.code" />
      <min value="1" />
    </element>
    <element id="Condition.code.coding">
      <path value="Condition.code.coding" />
      <slicing>
        <discriminator>
          <type value="value" />
          <path value="system" />
        </discriminator>
        <rules value="open" />
      </slicing>
      <min value="1" />
      <constraint>
        <key value="icd-1" />
        <severity value="warning" />
        <human value="Bei Angabe eines Codes in der Haupt-Kreuz-Extension, muss dieser auch Bestandteil des postkoordinierten ICD-Codes sein!" />
        <expression value="extension('http://fhir.de/StructureDefinition/icd-10-gm-haupt-kreuz').empty() or code.contains($this.extension('http://fhir.de/StructureDefinition/icd-10-gm-haupt-kreuz').value.code)" />
        <source value="http://fhir.de/StructureDefinition/condition-de-icd10" />
      </constraint>
      <constraint>
        <key value="icd-2" />
        <severity value="warning" />
        <human value="Bei Angabe eines Codes in der Stern-Extension, muss dieser auch Bestandteil des postkoordinierten ICD-Codes sein!" />
        <expression value="extension('http://fhir.de/StructureDefinition/icd-10-gm-stern').empty() or code.contains($this.extension('http://fhir.de/StructureDefinition/icd-10-gm-stern').value.code)" />
        <source value="http://fhir.de/StructureDefinition/condition-de-icd10" />
      </constraint>
      <constraint>
        <key value="icd-3" />
        <severity value="warning" />
        <human value="Bei Angabe eines Codes in der Ausrufezeichen-Extension, muss dieser auch Bestandteil des postkoordinierten ICD-Codes sein!" />
        <expression value="extension('http://fhir.de/StructureDefinition/icd-10-gm-ausrufezeichen').empty() or code.contains($this.extension('http://fhir.de/StructureDefinition/icd-10-gm-ausrufezeichen').value.code)" />
        <source value="http://fhir.de/StructureDefinition/condition-de-icd10" />
      </constraint>
      <constraint>
        <key value="icd-8" />
        <severity value="warning" />
        <human value="Bei Angabe eines Codes in der Seitenlokalisations-Extension, muss dieser auch Bestandteil des ICD-Codes sein!" />
        <expression value="extension('http://fhir.de/StructureDefinition/seitenlokalisation').empty() or code.contains($this.extension('http://fhir.de/StructureDefinition/seitenlokalisation').value.code)" />
        <source value="http://fhir.de/StructureDefinition/condition-de-icd10" />
      </constraint>
    </element>
    <element id="Condition.code.coding:ICD-10-GM">
      <path value="Condition.code.coding" />
      <sliceName value="ICD-10-GM" />
      <min value="1" />
      <max value="1" />
      <type>
        <code value="Coding" />
        <profile value="http://fhir.de/StructureDefinition/CodingICD10GM" />
      </type>
    </element>
    <element id="Condition.code.coding:ICD-10-GM.extension">
      <path value="Condition.code.coding.extension" />
      <slicing>
        <discriminator>
          <type value="value" />
          <path value="url" />
        </discriminator>
        <rules value="open" />
      </slicing>
    </element>
    <element id="Condition.code.coding:ICD-10-GM.extension:Primaercode">
      <path value="Condition.code.coding.extension" />
      <sliceName value="Primaercode" />
      <max value="1" />
      <type>
        <code value="Extension" />
        <profile value="http://fhir.de/StructureDefinition/icd-10-gm-primaercode" />
      </type>
    </element>
    <element id="Condition.code.coding:ICD-10-GM.extension:Manifestationscode">
      <path value="Condition.code.coding.extension" />
      <sliceName value="Manifestationscode" />
      <type>
        <code value="Extension" />
        <profile value="http://fhir.de/StructureDefinition/icd-10-gm-manifestationscode" />
      </type>
    </element>
    <element id="Condition.code.coding:ICD-10-GM.extension:Ausrufezeichen">
      <path value="Condition.code.coding.extension" />
      <sliceName value="Ausrufezeichen" />
      <type>
        <code value="Extension" />
        <profile value="http://fhir.de/StructureDefinition/icd-10-gm-ausrufezeichen" />
      </type>
    </element>
    <element id="Condition.code.coding:ICD-10-GM.extension:Diagnosesicherheit">
      <path value="Condition.code.coding.extension" />
      <sliceName value="Diagnosesicherheit" />
      <max value="1" />
      <type>
        <code value="Extension" />
        <profile value="http://fhir.de/StructureDefinition/icd-10-gm-diagnosesicherheit" />
      </type>
    </element>
    <element id="Condition.code.coding:ICD-10-GM.extension:Seitenlokalisation">
      <path value="Condition.code.coding.extension" />
      <sliceName value="Seitenlokalisation" />
      <max value="1" />
      <type>
        <code value="Extension" />
        <profile value="http://fhir.de/StructureDefinition/seitenlokalisation" />
      </type>
    </element>
  </differential>
</StructureDefinition>